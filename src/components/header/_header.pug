// HEADER :: START
.header-global
  header.header
    .header__top
      .container
        .header__top-wrapper
          a(href="#").link-iconed
            +svgMono('eye')
            span Версия для слабовидящих

          a(href="#") Switch to English

    .header__main
      .container
        .header__wrapper
          .header__left
            a(href="homepage.html").header__logo
              +svgColor('logo')
              +svgColor('logo-compact')
              +svgColor('logo-letters')
          .header__right
            a(href="tel:+79852008004").header__phone
              span +7 (985) 200-80-04
              +svgMono('phone')

            .header__right-wrapper
              ul.header__menu.js-megamenu-trigger
                li.have-ul
                  a(href="#" data-for="about") Об университете
                li.have-ul
                  a(href="#" data-for="programs") Программы
                li.have-ul
                  a(href="#" data-for="projects") Проекты
                li
                  a(href="#") Документы
                li
                  a(href="#") Контакты

              .header__search
                +svgMono('search')

              .header__hamburger
                .hamburger.js-hamburger
                  span
                  span
                  span

  include _megamenu

  // MOBILE NAVI
  .mobile-navi
    .mobile-navi__wrapper
      .mobile-navi__top
        a(href="#")
          +svgMono('eye')
          span Версия <br/>для слабовидящих

        a(href="#")
          +svgMono('eng-flag')
          span Switch <br/>to English

      ul.header__menu.mobile-navi__menu.js-mobile-navi-menu
        li.have-ul
          a(href="#") Об университете
          ul(data-teleport-target="mobile-navi-about")
        li.have-ul
          a(href="#") Программы
          ul(data-teleport-target="mobile-navi-programs")
        li.have-ul
          a(href="#") Проекты
          ul(data-teleport-target="mobile-navi-projects")
        li
          a(href="#") Документы
        li
          a(href="#") Контакты
