// programs
.programs
  .container
    h2.h2-title Программы

    .programs__slider.navigation-simple.pagination-simple
      .swiper-container.js-swiper-programs
        .swiper-wrapper
          each slide in [1,2,3,4]
            .swiper-slide
              a(href="#").program-card
                .program-card__title Длинное название программы: &laquo;Конструирование и&nbsp;технология электронных средств&raquo;
                .program-card__content
                  .program-card__description Дополнительная информация о&nbsp;времени обучения и&nbsp;пр.
                  .program-card__cta
                    +svgMono('arrow-long')
            .swiper-slide
              a(href="#").program-card
                .program-card__title Длинное название программы: &laquo;Конструирование и&nbsp;
                .program-card__content
                  .program-card__description Дополнительная информация о&nbsp;времени обучения и&nbsp;пр. информация о&nbsp;времени обучения и&nbsp;пр. информация о&nbsp;времени обучения и&nbsp;пр.
                  .program-card__cta
                    +svgMono('arrow-long')

      .swiper-next.swiper-programs-next
        +svgMono('arrow-nav-right')
      .swiper-prev.swiper-programs-prev
        +svgMono('arrow-nav-left')

      .swiper-pagination.swiper-programs-pagination
